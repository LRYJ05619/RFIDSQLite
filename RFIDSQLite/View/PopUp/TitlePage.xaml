<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RFIDSQLite.View.PopUp.TitlePage"
             xmlns:popUp="using:RFIDSQLite.ViewModel.PopUp"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <toolkit:Popup.BindingContext>
        <popUp:TitlePageViewModel/>
    </toolkit:Popup.BindingContext>

    <Grid WidthRequest="412" HeightRequest="235">
        <Frame BorderColor="Black" 
               BackgroundColor="{StaticResource BackGroundColor}"
               HasShadow="False">

            <VerticalStackLayout>
                <Entry BackgroundColor="White" Placeholder="请输入新标题" HorizontalTextAlignment="Center"
                       FontSize="18" HeightRequest="40" WidthRequest="372"  Margin="0,10,0,0" 
                       Text="{Binding TitleText}"/>

                <Entry TextChanged="Password_OnTextChanged"  MaxLength="6"  BackgroundColor="White" IsPassword="True" Placeholder="请输入密码" HorizontalTextAlignment="Center"
                       FontSize="18" HeightRequest="40" WidthRequest="372"  Margin="0,20,0,0" 
                       Text="{Binding Password}"/>

                <HorizontalStackLayout>
                    <Button Style="{StaticResource ButtonStyle}" HeightRequest="40" WidthRequest="180" HorizontalOptions="Center" 
                            Text="修改标题" Margin="0,20,5,0" FontSize="18"
                            Command="{Binding ChangeCommand}"/>

                    <Button Style="{StaticResource ButtonStyle}" HeightRequest="40" WidthRequest="180" HorizontalOptions="Center" 
                            Text="取消" Margin="5,20,0,0" FontSize="18"
                            Command="{Binding CancelCommand}"/>
                </HorizontalStackLayout>

                <!--<Button Style="{StaticResource ButtonStyle}" BackgroundColor="Red" HeightRequest="40" WidthRequest="180" HorizontalOptions="Center" 
                        Text="退出登录" Margin="0,20,0,0" FontSize="18"
                        Command="{Binding LogoutCommand }"/>-->

            </VerticalStackLayout>
        </Frame>
    </Grid>

</toolkit:Popup>