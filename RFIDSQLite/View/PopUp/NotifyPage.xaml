<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="RFIDSQLite.View.PopUp.NotifyPage"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid BackgroundColor="Transparent" WidthRequest="325" HeightRequest="155">
        <Frame BorderColor="Black" BackgroundColor="{StaticResource BackGroundColor}">
            <VerticalStackLayout>
                <Label Text="{Binding Message }" 
                       TextColor="{StaticResource HeaderColor}"
                       HorizontalOptions="Center"
                       FontSize="18" 
                       Padding="0,10,0,10"/>
                
                <Button Text="确定"
                        TextColor="{StaticResource White}"
                        WidthRequest="120"
                        HeightRequest="44" FontSize="18" 
                        BackgroundColor="{StaticResource ButtonColor}" 
                        Margin="0,15,0,20" 
                        Command="{Binding CancelCommand}"/>
            </VerticalStackLayout>
        </Frame>
    </Grid>

</toolkit:Popup>
